<h2 class="page-title">Money Collection</h2>

<div class="form-inline">
  <form action="/money-collection" method="POST" class="add-form">
    <select name="loan_id" required>
      <% loans.forEach(loan => { %>
        <option value="<%= loan.loan_id %>">
          <%= loan.customer_name %> - Loan #<%= loan.loan_id %> (RM <%= loan.amount %>, Collected: <%= loan.collected_amount || 0 %>)
        </option>
      <% }) %>
    </select>
    <input type="number" name="amount" step="0.01" placeholder="Amount Paid" required />
    <input type="date" name="date" required />
    <input type="text" name="remarks" placeholder="Remarks (optional)" />
    <button type="submit" class="btn-primary">Add</button>
  </form>
</div>

<div class="table-container">
  <table class="dataTable">
    <thead>
      <tr>
        <th>Loan ID</th>
        <th>Customer</th>
        <th>Total Loan</th>
        <th>Collected</th>
      </tr>
    </thead>
    <tbody>
      <% loans.forEach(loan => { %>
        <tr>
          <td><%= loan.loan_id %></td>
          <td><%= loan.customer_name %></td>
          <td><%= loan.amount.toFixed(2) %></td>
          <td><%= (loan.collected_amount || 0).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
